rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isAgency() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'agency';
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection rules
    match /users/{userId} {
      // Allow read if authenticated
      allow read: if isAuthenticated();

      // Allow create only for new users during registration
      allow create: if isAuthenticated() &&
                      request.auth.uid == userId &&
                      request.resource.data.role == 'agency'; // Only agencies can self-register

      // Allow update only to own profile
      allow update: if isOwner(userId);

      // Prevent delete (only admin via Cloud Functions can delete)
      allow delete: if false;
    }

    // Assets collection rules
    match /assets/{assetId} {
      // Admin can read all assets
      // Agencies can only read their own assets
      allow read: if isAdmin() ||
                    (isAgency() && resource.data.agencyId == request.auth.uid);

      // Only agencies can create assets (linked to their ID)
      allow create: if isAgency() &&
                      request.resource.data.agencyId == request.auth.uid &&
                      request.resource.data.keys().hasAll(['agencyId', 'description', 'category', 'location']);

      // Only asset owner can update their assets
      allow update: if isAgency() &&
                      resource.data.agencyId == request.auth.uid &&
                      request.resource.data.agencyId == request.auth.uid; // Prevent changing ownership

      // Only asset owner can delete their assets
      allow delete: if isAgency() && resource.data.agencyId == request.auth.uid;
    }

    // Logs collection rules (write-only for auditing)
    match /logs/{logId} {
      // Only admin can read logs
      allow read: if isAdmin();

      // Cloud Functions can write logs
      allow create: if true; // Controlled by Cloud Functions

      // Prevent update and delete
      allow update, delete: if false;
    }

    // Categories collection (predefined data, read-only)
    match /categories/{categoryId} {
      allow read: if true; // Public read
      allow write: if false; // Only via Cloud Functions or manual admin
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
